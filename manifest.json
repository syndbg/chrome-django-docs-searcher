{
    "author": "Anton Antonov",
    "manifest_version": 2,
    "name": "Django-Docs-Searcher",
    "version": "1.0.0",
    "homepage_url": "https://github.com/syndbg/chrome-django-docs-searcher",
    "description": "Search Django docs faster as a perfectionist",

    "icons": {
        "48": "src/img/icon48.png",
        "128": "src/img/icon128.png"
    },

    "background": {
        "page": "src/templates/background.html",
        "persistent": false
    },

    "omnibox": {
        "keyword": "dj-"
    },

    "permissions": [
          "contextMenus"
    ]
}
